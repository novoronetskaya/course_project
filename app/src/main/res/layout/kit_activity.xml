<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/f_kit"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="730dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@id/iv_kit_home_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/kit_activity_navigation" />

    <ImageView
        android:id="@+id/iv_kit_home_icon"
        android:layout_width="102dp"
        android:layout_height="50dp"
        android:background="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/home_icon" />

    <ImageView
        android:id="@+id/iv_kit_stats_icon"
        android:layout_width="102dp"
        android:layout_height="50dp"
        android:background="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_kit_home_icon"
        app:srcCompat="@drawable/stats_icon" />

    <ImageView
        android:id="@+id/iv_kit_kit_icon"
        android:layout_width="102dp"
        android:layout_height="50dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_kit_stats_icon"
        app:srcCompat="@drawable/kit_icon" />

    <ImageView
        android:id="@+id/iv_kit_treatment_icon"
        android:layout_width="102dp"
        android:layout_height="50dp"
        android:background="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_kit_kit_icon"
        app:srcCompat="@drawable/pill_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>