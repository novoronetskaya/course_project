<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_refill_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:hint="2022.12.12"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:layout_alignTop="@id/tv_refill_date"
        android:background="@drawable/rectangle_rounded"
        android:backgroundTint="@color/light_blue" />

    <TextView
        android:id="@+id/tv_refill_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/iv_background"
        android:layout_alignTop="@id/iv_background"
        android:layout_marginStart="23dp"
        android:fontFamily="@font/montserrat"
        android:hint="+50"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignStart="@id/iv_background"
        android:layout_alignEnd="@id/iv_background"
        android:layout_alignBottom="@id/tv_refill_amount"
        android:layout_marginBottom="7dp"
        android:background="@android:color/black" />

    <TextView
        android:id="@+id/tv_refilled_by"
        android:layout_width="350dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@id/iv_background"
        android:layout_marginStart="23dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/refilled_by"
        android:textColor="@color/black"
        android:textSize="21sp" />
</RelativeLayout>